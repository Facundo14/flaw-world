---
import type { DayItinerary } from '../utils/interfaces';

interface Props {
	dayItinerary: DayItinerary;
}

const { dayItinerary } = Astro.props;
---

<section class="antialiased items-start border rounded-2xl">
	<div class="max-w-screen-xl px-4 py-8 mx-auto lg:px-6 sm:py-16 lg:py-24">
		<div class="max-w-3xl mx-auto text-center">
			<h2
				class="text-4xl font-extrabold leading-tight tracking-tight text-white dark:text-white"
			>
				Dia {dayItinerary.day}
			</h2>
		</div>

		<div class="flow-root max-w-3xl mx-auto mt-8 sm:mt-12 lg:mt-16">
			{
				dayItinerary.activities.map((activity) => (
					<div class="flex flex-col gap-2 py-4 sm:gap-6 sm:flex-row sm:items-center">
						<p class="w-32 text-lg font-normal text-white sm:text-right dark:text-gray-400 shrink-0">
							{activity.time}
						</p>
						<h3 class="text-lg font-semibold text-white dark:text-white">
							{activity.description}
						</h3>
					</div>
				))
			}
		</div>
	</div>
</section>
